source ~/.vimrc


set incsearch
set ignorecase
set smartcase
set easymotion
set commentary


" Splitting Windows
nmap <Leader>wh :split<CR>
nmap <Leader>wv :vsplit<CR>

""" Idea specific settings ------------------
set ideajoin

nmap <leader>r <Action>(Refactorings.QuickListPopupAction)
vmap <leader>r <Action>(RefactoringMenu)
vmap <leader>f <Action>(ReformatCode)
